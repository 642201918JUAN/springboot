<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reptile.dao.MapperInterface">
    <select id="getSomeOne" resultType="String">
      SELECT  * FROM  bigyoung.user WHERE  id=#{0}
    </select>

    <insert id="postOne" parameterType="String">
        INSERT INTO  bigyoung.user VALUES ${0}
    </insert>

    <delete id="deleteOne" parameterType="String">
        DELETE  FROM  bigyoung.user WHERE  id=#{0}
    </delete>

    <update id="putOne" parameterType="String">
        UPDATE bigyoung.user SET age=#{0} WHERE  id=#{1}
    </update>
</mapper>